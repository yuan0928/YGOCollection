@model IEnumerable<CardInfoViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">建立卡片資訊</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardSeries.SeriesName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeriesNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardType.TypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardPassword)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardSeries.SeriesName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeriesNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardType.TypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardPassword)
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
